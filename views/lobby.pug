extends layout

block head
    link(rel='stylesheet', href='/css/lobby.css')

block content
    h1.title Welcome to the lobby!

    h2 Worlds:
    each world in worlds
        .world
            p
                | #{world.name} (size:#{world.size}) (players:#{world.playerCount}) 
                a(href=`/world/${world.name}`) Join
    
    button(onclick='createWorld()') New World

block scripts
    script(src='/js/lobby.js')
